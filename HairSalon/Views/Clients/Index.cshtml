@{
  Layout = "_Layout";
}

<nav class="well">
    <ul class="nav nav-pills purple nav-justified">
        <li><a href="/stylists">Stylists</a></li>
        <li class="active"><a href="/clients">Clients</a></li>
        <li><a href="/specialties">Specialties</a></li>
    </ul>
</nav>

<h2>Clients</h2>
<div class="options well">
    <h3 class="options">Options</h3>
    <p class="options"><span class="glyphicon glyphicon-plus"></span> Add Clients from a Stylist's Details page</p>
    <p class="options"><a href="/clients/delete"><span class="glyphicon glyphicon-warning-sign"></span> Delete All Clients</a></p>

</div>

@if (@Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Client Name</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var client in @Model)
            {
                <tr>
                    <td>@client.GetFirstName() @client.GetLastName()</td>
                    <td><a href="/clients/@client.GetId()"><span class="glyphicon glyphicon-list-alt"></span></a></td>
                    <td><a href="/clients/@client.GetId()/update"><span class="glyphicon glyphicon-edit"></span></a></td>
                    <td><a href="/clients/@client.GetId()/delete"><span class="glyphicon glyphicon-remove"></a></td>
                </tr>
            }
        </tbody>
    </table>
}
