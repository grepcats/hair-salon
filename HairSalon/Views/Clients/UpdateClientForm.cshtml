@{
  Layout = "_Layout";
}

<nav class="well">
    <ul class="nav nav-pills purple nav-justified">
        <li><a href="/stylists">Stylists</a></li>
        <li class="active"><a href="/clients">Clients</a></li>
        <li><a href="/specialties">Specialties</a></li>
    </ul>
</nav>

<h2>Update Client @Model["client"].GetFirstName()</h2>

<form method="post" action='/clients/@Model["client"].GetId()/update'>
    <div class="form-group">
        <label for="c-first-name">First Name</label>
        <input type="text" name="c-first-name" class="form-control" value='@Model["client"].GetFirstName()'>
    </div>
    <div class="form-group">
        <label for="c-last-name">Last Name</label>
        <input type="text" name="c-last-name" class="form-control" value='@Model["client"].GetLastName()'>
    </div>
    <div class="form-group">
        <label for="phone-number">Phone Number</label>
        <input type="text" name="phone-number" class="form-control" value='@Model["client"].GetPhoneNumber()'>
    </div>
    <div class="form-group">
        <label for="stylist">Stylist</label>
        <select name="stylist" class="form-control">
            @foreach(var stylist in @Model["stylists"])
            {
                if (@stylist.GetId() == @Model["client"].GetStylistId())
                {
                    <option value="@stylist.GetId()" selected="selected">@stylist.GetFirstName() @stylist.GetLastName()</option>
                }
                else
                {
                    <option value="@stylist.GetId()">@stylist.GetFirstName() @stylist.GetLastName()</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-default">Update Client</button>
</form>
