@{
  Layout = "_Layout";
}

<h2>Specialties</h2>
<a href="/specialties/new">Add new specialty</a>
@if (@Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Specialty Name</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var specialty in @Model)
            {
                <tr>
                    <td>@specialty.GetName()</td>
                    <td><a href="/specialties/@specialty.GetId()">Details</a></td>
                </tr>
            }
        </tbody>
    </table>

}
<a href="/">Back to Home</a>
