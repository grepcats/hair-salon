@{
  Layout = "_Layout";
}

<nav class="well">
    <ul class="nav nav-pills purple nav-justified">
        <li><a href="/stylists">Stylists</a></li>
        <li><a href="/clients">Clients</a></li>
        <li class="active"><a href="/specialties">Specialties</a></li>
    </ul>
</nav>

<h2>Specialties</h2>

<div class="options well">
    <h3 class="options">Options</h3>
    <p class="options"><span class="glyphicon glyphicon-plus"></span> <a href="/specialties/new">Add new specialty</a></p>
    @* <p class="options"><a href="/specialties/delete"><span class="glyphicon glyphicon-warning-sign"></span> Delete All Specialties</a></p> *@

</div>

@if (@Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Specialty Name</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var specialty in @Model)
            {
                <tr>
                    <td>@specialty.GetName()</td>
                    <td><a href="/specialties/@specialty.GetId()"><span class="glyphicon glyphicon-list-alt"></span></a></td>
                </tr>
            }
        </tbody>
    </table>

}
