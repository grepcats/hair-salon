@{
  Layout = "_Layout";
}

<nav class="well">
    <ul class="nav nav-pills purple nav-justified">
        <li><a href="/stylists">Stylists</a></li>
        <li><a href="/clients">Clients</a></li>
        <li class="active"><a href="/specialties">Specialties</a></li>
    </ul>
</nav>

<h2>Details for specialty</h2>
<h3>Name of specialty: @Model["specialty"].GetName()</h3>

<div class="options well">
    <h3 class="options">Options</h3>
    <p class="options"><span class="glyphicon glyphicon-plus"></span> Add Stylist
        <form method="post" action='/specialties/@Model["specialty"].GetId()/add-stylist'>
                <select name="add-stylist" class="form-control">
                    @foreach(var stylist in @Model["allStylists"])
                    {
                        <option value="@stylist.GetId()">@stylist.GetFirstName() @stylist.GetLastName()</option>
                    }
                </select>
            <button type="submit" class="btn btn-default">Add Stylist</button>
        </form>
    </p>
</div>

@if (@Model["stylists"].Count > 0)
{
    <h3>Stylists with this specialty</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Stylist Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var stylist in @Model["stylists"])
            {
                <tr>
                    <td>@stylist.GetFirstName() @stylist.GetLastName()</td>
                </tr>
            }
        </tbody>
    </table>
}
